  - task: build
    config:
      platform: linux
      image_resource:
        type: docker-image
        source:
          repository: java
          tag: 'openjdk-8'
      inputs:
        - name: source-deploy
        - name: {{ micro_name }}
      outputs:
        - name: build-output
          path: build-output/
      run:
        path: source-deploy/ci/scripts/build.sh
    params:
      MICRONAME: {{ micro_name }}