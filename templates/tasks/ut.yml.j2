  - task: ut
    config:
      platform: linux
      image_resource:
        type: docker-image
        source:
          repository: java
          tag: 'openjdk-8'
      inputs:
        - name: source-deploy
        {%- for repo in micros_list %}
        - name: {{ repo }}
        {%- endfor %}
      run:
        path: source-deploy/ci/scripts/ut.sh
    params:
      MICROSLIST: {{ micros_list_str }}